@model IEnumerable<ProjetoModeloDDD.MVC.ViewModels.ClienteViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Cliente</h2>

<p>
    @Html.ActionLink("Novo Cliente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SobreNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SobreNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo, new { @class = "checkbox"})
                @*<div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="defaultChecked2" checked disabled>
                    <label class="custom-control-label" for="defaultChecked2"></label>
                </div>*@
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })" title="Editar" class="btn btn-primary">Editar</a>
                <a href="@Url.Action("Details", new { id = item.Id })" title="Detalhe" class="btn btn-secondary">Detalhe</a>
                <a href="@Url.Action("Delete", new { id = item.Id })" title="Excluir" class="btn btn-danger">Exluir</a>
            </td>
        </tr>
    }

</table>
